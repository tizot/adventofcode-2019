{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OCaml module",
            "type": "shell",
            "command": "~/.opam/system/bin/ocamlbuild -I src -I lib ${fileBasenameNoExtension}.native",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
